{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ 'admin.dashboard' | trans }}</h1>
        <div class="form-column">
            <div class="form-left">
                <h3>{{ 'admin.last_login_users' | trans }}</h3>
                <table class="striped">
                    <thead>
                        <tr>
                            <th>{{ 'admin.index' | trans }}</th>
                            <th>{{ 'admin.email' | trans }}</th>
                            <th>{{ 'admin.login_date' | trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in lastLoggedUsers %}
                            <tr>
                                <td>{{loop.index}}</td>
                                <td>{{user.email}}</td>
                                <td>{{user.lastLoginAt|date("d/m/Y H:i:s")}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
